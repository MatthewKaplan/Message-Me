<h4 align="center">
  <div class="chatroom-icon"></div>
  Say something!
</h4>
<div class="row">
    <div class="col-10">
      <div class="card chatbox">
        <div class="card-body">
          <div class="ui small feed">
            <%= render @messages%>
          </div>
        </div>
        <div class="chatbox-divider"></div>
         <%= form_for(@message, html: {role: "form"}, url: message_path) do |f| %>
          <div class="card-body input-field">
            <div class="input-group mb-3">
              <%= f.text_field :body, placeholder: "Enter a message...", class: "form-control" %>
              <div class="input-group-append">
                <%= f.button '<div class=""></div>'.html_safe, class: "btn btn-outline-secondary btn-icon" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-2">
      <div class="card chatbox">
        <div class="card-body">
          <div class="users-menu">
            <span class="dropdown-item-text">Online Users</span>
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      </div>
    </div>
  </div>